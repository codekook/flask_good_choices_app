# Flask Application Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Flask secret key for session management and CSRF protection
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_generate_a_random_one

# Database Configuration
# MySQL database username
USERNAME=your_database_username

# MySQL database password
PASSWORD=your_database_password

# MySQL database hostname (include port if needed)
HOSTNAME=your_database_hostname

# MySQL database name
DBNAME=your_database_name

# Optional: Test Database (for running tests)
# If not set, tests will use DBNAME
TEST_DBNAME=your_test_database_name
